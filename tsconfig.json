{
  "compilerOptions": {
    "baseUrl": "src",
    "lib": ["es6", "dom"],
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "*": ["node_modules/*"],
      "@modules/*": ["modules/*"],
      "@helpers/*": ["helpers/*"],
      "@services/*": ["services/*"],
      "@entities/*": ["entities/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
